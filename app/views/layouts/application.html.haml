!!! utf-8
%html
  %head
    %title= "#{title} - #{subtitle}"
    
    %meta{charset: "utf-8"}
    %meta{name: "description", content: "#{title} - #{subtitle}"}
    %meta{name: "author", content: "Peter Schr√∂der"}
    
    %link{rel: 'shortcut icon', href: image_path('asin_icon.png')}

    = csrf_meta_tag
    = stylesheet_link_tag 'http://twitter.github.com/bootstrap/1.3.0/bootstrap.min.css', 'http://fonts.googleapis.com/css?family=Holtwood+One+SC', "application"
    = javascript_include_tag "application"

  %body
    #content
      %header
        %h1= title
        %h3= subtitle
      %nav
        %ul
          - nav_items.each do |nav|
            %li
              %a{href: "##{nav}"}= nav
      = yield